@page
@using DnDIniativeTracker.Models
@model DnDIniativeTracker.Pages.CreateCreaturePage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create creature";
    ViewData["wide"] = false;
}
<h1>Create creature</h1>
@await Html.PartialAsync("~/Shared/_Success.cshtml")
<form action="" method="POST">
    <div class="mb-3">
        <label asp-for="CreatureCreateDto.Name" class="form-label">Name:</label>
        <input asp-for="CreatureCreateDto.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CreatureCreateDto.HP" class="form-label">HP:</label>
        <input asp-for="CreatureCreateDto.HP" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CreatureCreateDto.Initiative" class="form-label">Initiative:</label>
        <input asp-for="CreatureCreateDto.Initiative" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CreatureCreateDto.AC" class="form-label">AC:</label>
        <input asp-for="CreatureCreateDto.AC" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CreatureCreateDto.Role" class="form-label">Role:</label>
        <select asp-for="CreatureCreateDto.Role" asp-items="Html.GetEnumSelectList<Creature.Roles>()" class="form-select form-control">
        </select>
    </div>
    <input type="submit" value="Create creature" class="btn btn-success btn-lg"/>
</form>